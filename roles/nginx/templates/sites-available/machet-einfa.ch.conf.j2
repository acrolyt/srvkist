# {{ ansible_managed }}

server {
  listen 80;
  listen [::]:80;

  server_name
    machet-einfa.ch
    www.machet-einfa.ch
    maisfeld.org
    www.maisfeld.org;

  root /var/www/;

  #location /.well-known/acme-challenge {
  #  alias /etc/ssl/letsencrypt;
  #}

  location / {
    try_files $uri $uri/ =404;
    #rewrite ^(.*) https://$http_host$1 permanent;
  }

  include /etc/nginx/common.conf;

}

server {

  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name
    machet-einfa.ch
    www.machet-einfa.ch
    maisfeld.org
    www.maisfeld.org;

  root /var/www/;

  location / {
    try_files $uri $uri/ =404;
  }

  include /etc/nginx/common.conf;

}
